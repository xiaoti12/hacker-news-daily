ai:
  base_url: "https://api.openai.com/v1"
  api_key: ""
  model: "gpt-4o"
  max_tokens: 4000

telegram:
  bot_token: ""
  chat_id: ""
  proxy_url: "socks5://127.0.0.1:7890"

scheduler:
  cron: "0 0 18 * * * *"  # 每天18:00:00执行

hacker_news:
  timeout: 30  # seconds
  max_stories: 10
  max_top_level_comments: 20  # 顶级评论数量限制
  max_child_comments: 5       # 子评论数量限制
